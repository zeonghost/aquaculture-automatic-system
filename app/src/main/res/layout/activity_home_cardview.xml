<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:layout_marginStart="50dp"

    android:elevation="10dp"
    android:orientation="vertical"
    app:cardBackgroundColor="#66128C7E"
    app:cardCornerRadius="7dp"
    app:cardElevation="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtViewPiID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="3dp"
            android:text="@string/pi_id"
            android:textColor="#075E54"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtViewPondName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:text="@string/pond_name"
            android:textColor="#075E54"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtViewPondLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="5dp"
            android:text="@string/pond_location"
            android:textColor="#075E54"
            android:textSize="24sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>