<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/plain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EvaporationActivity">

    <android.support.v7.widget.CardView

        android:id="@+id/eveporationRateCardView"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        app:cardBackgroundColor="#DD075E54"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingTop="10dp"
                android:text="Date: "
                android:textColor="#6FFFB5"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textViewEvapDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:text="Date Here"
                android:textColor="#6FFFB5"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/evaporationRateLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewEvaporation"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:gravity="center"
                android:paddingTop="40dp"
                android:text="xxx"
                android:textColor="#ffff"
                android:textSize="45sp"
                android:textStyle="bold" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChartEvaporationRate"
        android:layout_width="0dp"
        android:layout_height="337dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:background="#90FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eveporationRateCardView"
        app:layout_constraintVertical_bias="0.198">

    </com.github.mikephil.charting.charts.LineChart>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:itemBackground="@color/colorPrimary"
        app:itemHorizontalTranslationEnabled="true"
        app:itemIconTint="@drawable/color_select"
        app:itemTextColor="@color/common_google_signin_btn_text_dark_pressed"
        app:labelVisibilityMode="auto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_bottom_navigation_items">
    </android.support.design.widget.BottomNavigationView>

</android.support.constraint.ConstraintLayout>